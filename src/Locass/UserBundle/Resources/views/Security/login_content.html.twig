{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="smart-form client-form">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <header>
        Sign In
    </header>
    <fieldset>
        <section>
            <label class="label" for="username">{{ 'security.login.username'|trans }}</label>
            <label class="input"> <i class="icon-append fa fa-user"></i>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter email address/username</b>
            </label>
        </section>

        <section>
            <label class="label" for="password">{{ 'security.login.password'|trans }}</label>
            <label class="input"> <i class="icon-append fa fa-lock"></i>
                <input type="password" id="password" name="_password" required="required" />
                <b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> Enter your password</b>
            </label>
        </section>
        <section>
            <label class="checkbox">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <i></i><label for="remember_me">{{ 'security.login.remember_me'|trans }}</label></label>

        </section>
    </fieldset>
    <footer>
        <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
    </footer>
</form>
