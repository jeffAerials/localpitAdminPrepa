{% block band_content %}
    <!-- row -->
    <div class="row">

        <!-- col -->
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">

                <!-- PAGE HEADER -->
                <i class="fa-fw fa fa-edit"></i>
                Homepage
                <span>>
								Band
							</span>
            </h1>
        </div>
        <!-- end col -->



    </div>
    <!-- end row -->

